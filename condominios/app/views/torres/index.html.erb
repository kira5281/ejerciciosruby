<h1>Lista de torres</h1>

<%= link_to "Agregar Torre", new_torre_path%>

<ol>
<% @torres.each do |torre| %>
	<li><%= torre.nombre %>
	    | Portero: | <%= torre.portero %>
	    <%= link_to 'Ver', torre_path(torre) %>
		<%= link_to "Editar", edit_torre_path(torre) %>
		<%= link_to "borrar", torre_path(torre), method: :delete, 
		data: { confirm: 'Estas seguro?'} %>
	</li>
<% end %>
</ol>
